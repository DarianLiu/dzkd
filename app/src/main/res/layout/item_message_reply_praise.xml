<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="18dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_replypraise_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/icon_mine_head" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp">
                <TextView
                    android:id="@+id/tv_replypraise_name"
                    style="@style/mine_message_replypraise_name"
                    android:text="用户名" />

                <TextView
                    android:id="@+id/tv_replypraise_time"
                    style="@style/mine_message_replypraise_time"
                    android:text="2018-01-01" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_replypraise_content"
                style="@style/mine_message_replypraise_content"
                android:text="回复了我：" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/icon_message_article_top"/>

            <RelativeLayout
                android:id="@+id/rLayout_replypraise_article"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/color_F2F2F2">
                <ImageView
                    android:id="@+id/iv_replypraise_article"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="10dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_dzkd_news_6"/>

                <ImageView
                    android:id="@+id/iv_replypraise_article_video"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_marginStart="4dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_message_article_video"/>

                <TextView
                    android:id="@+id/tv_replypraise_article_title"
                    style="@style/mine_message_replypraise_article_title"
                    android:layout_toEndOf="@+id/iv_replypraise_article"
                    android:text="文章标题" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@color/color_DDDDDD"/>

</LinearLayout>
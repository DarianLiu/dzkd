<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="#edf6ff">

    <ImageView
        android:id="@+id/iv_adbanner_short"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/tv_adbanner_short"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="45dp"
        android:paddingStart="10dp"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="标题"
        android:textColor="@color/color_c333333"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/bt_adbanner_short"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/short_ownbanner_adbotton"
        android:gravity="center"
        android:text="广告"
        android:textSize="10sp"
        android:textColor="@color/color_FFFFFF"/>
</RelativeLayout>
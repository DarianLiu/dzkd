<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_video_play"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_item_background"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="202dp">

        <ImageView
            android:id="@+id/image_video_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/icon_dzkd_place" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/video_normal_logo_img"
            android:src="@drawable/icon_video_play" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shape_video_title"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_video_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/video_normal_content_txt"
                android:paddingTop="@dimen/p26"
                android:text="111111"
                 />

            <TextView
                android:id="@+id/tv_video_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:text="00.00"
                style="@style/video_normal_time_txt"/>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_video_item"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="#fff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_video_name"
            style="@style/style_news_source_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="中国联运" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_video_fang"
            style="@style/style_news_source_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/icon_video_playback"
            android:text="1451" />

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_item_background">

    <ImageView
        android:id="@+id/iv_native_ad_cover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="原生广告封面"
        android:src="@drawable/icon_dzkd_place" />

    <TextView
        android:id="@+id/tv_native_ad_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_native_ad_cover"
        style="@style/video_normal_ads_txt"
        android:background="@drawable/shape_video_title"
        android:text="原生广告标题"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_below="@+id/iv_native_ad_cover"
        android:background="#fff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_native_ad_source"
            style="@style/style_news_source_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="100dp"
            android:layout_marginStart="10dp"
            android:maxLines="1"
            android:text="原生广告来源" />

        <TextView
            style="@style/style_news_source_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="10dp"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/icon_video_playback"
            android:text="广告" />

        <!--<ImageView-->
            <!--android:id="@+id/iv_native_ad_logo"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentEnd="true"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_marginEnd="10dp"-->
            <!--android:contentDescription="广告logo" />-->

    </RelativeLayout>

</RelativeLayout>




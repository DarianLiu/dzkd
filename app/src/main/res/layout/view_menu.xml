<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:contentDescription="@null"
        android:focusable="false"
        android:src="@drawable/selector_menu_news" />
    <!--android:src="@drawable/tab_index_selector">-->

    <TextView
        android:id="@+id/tv_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_menu"
        android:layout_centerHorizontal="true"
        android:paddingBottom="4dp"
        android:paddingTop="2dp"
        android:text="看点"
        android:textColor="@drawable/selector_menu_color"
        android:textSize="@dimen/menu_text_size" />

    <TextView
        android:id="@+id/tv_red_point"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@+id/iv_menu"
        android:background="@drawable/shape_red_point"
        android:visibility="gone" />

</RelativeLayout>